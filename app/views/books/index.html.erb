<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @book, url:'/books', local:true do |f| %>

  <h4>title</h4>
  <%=f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>